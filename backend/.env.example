# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=production

# Database
MONGO_URI=your_mongodb_connection_string_here

# JWT Secrets (Generate strong random strings)
JWT_SECRET=your_jwt_secret_key_here
REFRESH_SECRET=your_refresh_secret_key_here

# Frontend URLs (for CORS)
FRONTEND_URL=https://your-frontend-domain.netlify.app
CLIENT_URL=https://your-frontend-domain.vercel.app

# Cloudinary Configuration
CLOUDINARY_API_KEY=your_cloudinary_api_secret_here

# Email Configuration (Gmail/SMTP)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password_here
EMAIL_USER_ADMIN=admin_email@gmail.com
EMAIL_PASS_ADMIN=admin_email_app_password_here

# Stripe Payment
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# Note: Never commit the actual .env file to version control!
